<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsersActivity"
    android:background="@color/menu">


    <Button
        android:id="@+id/words_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150sp"
        android:layout_marginHorizontal="50sp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/black"
        android:text="@string/words" />

    <Button
        android:id="@+id/tests_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/words_id"
        android:layout_marginTop="25sp"
        android:layout_marginHorizontal="50sp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/black"
        android:text="@string/tests" />

    <Button
        android:id="@+id/settings_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:layout_marginHorizontal="50sp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/black"
        android:layout_below="@+id/translated_id"
        android:text="@string/settings" />

    <Button
        android:id="@+id/translated_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:layout_marginHorizontal="50sp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/black"
        android:layout_below="@+id/tests_id"
        android:text="@string/translated" />
</RelativeLayout>
