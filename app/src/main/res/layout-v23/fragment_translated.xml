<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.translated.TranslatedFragment">

    <TextView
        android:id="@+id/translated_text"
        android:layout_width="match_parent"
        android:layout_height="125sp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="25sp"
        android:layout_below="@+id/language_2"
        android:textSize="20sp"
        android:background="@color/white"
        android:textColor="@color/menu"
        android:backgroundTint="@color/btn"
        android:gravity="start"/>

    <TextView
        android:id="@+id/language_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RU"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="150sp"
        android:layout_marginStart="50sp"/>

    <TextView
        android:id="@+id/language_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EN"
        android:textSize="30sp"
        android:layout_below="@+id/btn_translated"
        android:textColor="@color/black"
        android:layout_marginStart="50sp"/>

    <Button
        android:id="@+id/btn_translated"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/input_translated"
        android:layout_marginStart="48sp"
        android:layout_marginTop="8sp"
        android:layout_toEndOf="@+id/btn_save"
        android:backgroundTint="@color/btn"
        android:drawableTop="@drawable/ic_baseline_translate_24"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/input_translated"
        android:layout_marginStart="25sp"
        android:layout_marginTop="8sp"
        android:backgroundTint="@color/btn"
        android:drawableTop="@drawable/ic_baseline_arrow_circle_down_24"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_revers"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/input_translated"
        android:layout_marginStart="48sp"
        android:layout_marginTop="8sp"
        android:layout_toEndOf="@+id/btn_translated"
        android:backgroundTint="@color/btn"
        android:drawableTop="@drawable/ic_baseline_autorenew_24"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/input_translated"
        android:layout_width="match_parent"
        android:layout_height="125sp"
        android:layout_marginHorizontal="25sp"
        android:layout_marginTop="200sp"
        android:autofillHints=""
        android:background="@color/btn"
        android:ems="10"
        android:hint="@string/input_word"
        android:inputType="textPersonName"
        android:minHeight="48sp"
        android:gravity="start"
        android:textColor="@color/white"
        tools:ignore="TextContrastCheck" />
</RelativeLayout>